    <tr>
        <td>ID</td>
        <td>City Name</td>
        <td>State Name</td>
        <td>Country Name</td>
        <td>Action</td>
    </tr>
    {{#each mydata}}
    <tr>
        <td>{{@index}}</td>
        
        <td>{{city_name}}</td>
        <td>{{_state.state_name}}</td>
        <td>{{_country.country_name}}</td>
        <td>
            <a href="/city/edit">Edit</a>
            <a href="/city/delete">Delete</a>
        </td>
    </tr>
    {{/each}}
</table>